{
  "manifest_version": 3,
  "name": "Thunderclone Extension",
  "version": "1.0",
  "description": "Adds a custom button to GitHub repository pages.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

