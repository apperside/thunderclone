{
  "manifest_version": 3,
  "name": "Thunderclone Extension",
  "version": "1.0",
  "description": "Adds a custom button to GitHub repository pages.",
  "background": {
    "service_worker": "./background.ts"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "./content/content.tsx"
      ]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}